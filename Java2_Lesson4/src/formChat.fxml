<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controller"
      alignment="center">
    <VBox fx:id="gridPanel" alignment="TOP_LEFT"  >
        <TextArea fx:id="areaField" editable="false" layoutX="1" layoutY="0"/>
        <HBox fx:id="msgPanel">
            <TextField fx:id="msgField" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" onAction="#sendMsg"/>
            <Button text="Отправить" onAction="#sendMsg"/>
        </HBox>
    </VBox>
</VBox>